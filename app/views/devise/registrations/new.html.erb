<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), builder: FancyFormBuilder, html: {class: 'medium-4 medium-push-4'}) do |f| %>
  <h2>Регистрация</h2>
  <div class="form__group">
    <div class="input--icon">
      <i class="ss-icon ss-user"></i>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="input--icon">
      <i class="ss-icon ss-user"></i>
      <%= f.text_field :username %>
    </div>

    <div class="input--icon">
      <i class="ss-icon ss-mail"></i>
      <%= f.email_field :email %>
    </div>

    <div class="input--icon">
      <i class="ss-icon ss-key"></i>
      <%= f.password_field :password %>
    </div>

    <div class="input--icon">
      <i class="ss-icon ss-key"></i>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <footer class="form__footer">
    <%= f.submit "Регистрация", class: 'button' %>
    <%= render "devise/shared/links" %>
  </footer>
<% end %>
