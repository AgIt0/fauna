<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), builder: FancyFormBuilder, html: {class: 'devise-form'}) do |f| %>
  <h2>Вход</h2>
  <div class="form-group">
    <%= f.email_field :email, :autofocus => true %>
    <%= f.password_field :password %>
  </div>
  <%= f.check_box :remember_me, label: 'Запомни ме' %>

  <%= f.submit "Вход", class: 'button' %>

  <%= render "devise/shared/links" %>
<% end %>
