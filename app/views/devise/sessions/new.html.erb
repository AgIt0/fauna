<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), builder: FancyFormBuilder, html: {class: 'medium-4 medium-push-4'}) do |f| %>
  <h2>Вход</h2>
  <div class="form__group">
    <div class="input--icon">
      <i class="ss-icon ss-mail"></i>
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="input--icon">
      <i class="ss-icon ss-key"></i>
      <%= f.password_field :password %>
    </div>
  </div>
  <%= f.check_box :remember_me, label: 'Запомни ме' %>

  <footer class="form__footer">
    <%= f.submit "Вход", class: 'button' %>
    <%= render "devise/shared/links" %>
  </footer>
<% end %>
