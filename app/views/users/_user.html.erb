<li>
  <% if user.url.present?  %>
    <%= link_to user.url do %>
      <strong><%= user.name %></strong>
    <% end %>
  <% else %>
    <strong><%= user.name %></strong>
  <% end %>

  <% if user.twitter.present?  %>
    <br>
    <%= link_to "@#{user.twitter}", "https://twitter.com/#{user.twitter}" %>
  <% end %>
</li>
